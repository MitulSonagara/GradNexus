{
    "compilerOptions": {
      "module": "commonjs",
      "target": "ES2016",
      "noImplicitAny": true,
      "removeComments": true,
      "preserveConstEnums": true,
      "sourceMap": true,
      "noEmit": false,
      "allowJs": true,
      "types": ["node"],
      "strictNullChecks": true,
      "allowSyntheticDefaultImports": true,
      "outDir": "dist",
      "moduleResolution": "Node",
      "declaration": true,
      "declarationDir": "dist"
    },
    "files": ["src/index.ts"],
    "include": ["src/**/*"],
    "exclude": ["node_modules", "**/*.test.js"]
  }