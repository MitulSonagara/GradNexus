{
    // Enable minification
    "jsc": {
        "parser": {
            "syntax": "typescript",
            "tsx": false,
            "decorators": true,
            "dynamicImport": true
        },
        "target": "es2016",
        "paths": {
            "@routes/*": [
                "./src/routes/*"
            ],
            "@middlewares/*": [
                "./src/middlewares/*"
            ]
        },
        "baseUrl": "."
    },
    "module": {
        "type": "commonjs"
    }
}